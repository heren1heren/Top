<html>

<body>
    <ul>
        <% for (let i=0; i < messages.length; i++) { %>

            <li>
                <%= messages[i].text %>
                    By <%= messages[i].user %>
                        When <%=messages[i].added %>
                            <a
                                href="<%=messages[i].text %>?author=<%= messages[i].user %>&added=<%=messages[i].added %>">
                                Open
                                message detail</a>
            </li>

            <% } %>
    </ul>
    <a href="/new">new message here!!!</a>
</body>

</html>